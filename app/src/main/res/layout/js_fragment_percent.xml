<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/ll_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/sub_ll_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:weightSum="4">


        <EditText
            android:id="@+id/et_percentSearch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/js_edit_search"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:hint="专业"
            android:textColor="#bfbfbf"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:background="@drawable/js_edittext_border"
            android:textCursorDrawable="@drawable/js_color_cursor"
            android:layout_weight="3"
            android:layout_marginRight="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        </LinearLayout>
        <Button
            android:id="@+id/bt_percentSearch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:text="查询"
            android:textColor="#ffffff"
            android:background="@drawable/js_button_bg"/>

    </LinearLayout>
</RelativeLayout>