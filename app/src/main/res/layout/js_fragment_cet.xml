<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/ll_cet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <EditText
            android:drawableLeft="@drawable/js_edit_search"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:hint="学号"
            android:textColor="#bfbfbf"
            android:textSize="18dp"
            android:background="@drawable/js_edittext_border"
            android:textCursorDrawable="@drawable/js_color_cursor"
            android:layout_weight="0.38"
            android:layout_marginRight="15dp"
            android:id="@+id/et_cetSearch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"/>

        <Button
            android:id="@+id/bt_cetSearch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:text="查询"
            android:textColor="#ffffff"
            android:background="@drawable/js_button_bg"/>

    </LinearLayout>
</LinearLayout>