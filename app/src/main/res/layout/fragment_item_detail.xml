<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
        android:background="@drawable/bg1"
    >

    <Button
        android:id="@+id/po5"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/po2"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/po5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:text="行政部"
        android:textColor="#00FF00"
        android:textSize="50sp" />

    <Button
        android:id="@+id/po1"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="27dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/po2"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_below="@+id/po1"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/po1"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/po3"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_above="@+id/title1"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/po2"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/po4"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/po2"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

</RelativeLayout>